@{
    ViewBag.Title = "Actualizando Datos";
    EscuelaMVC.Models.Alumno datos = ViewBag.Datos;
}

<div class="container">
    @using (Html.BeginForm("Actualizar", "Home",FormMethod.Get))
    {
        <div class="form-group">
            <label class="control-label col-xs-3">Nombre</label>
            <div class="col-xs-9">
                <input class="form-control"
                        type="text" 
                       placeholder="@datos.sNombre" 
                       value="@datos.sNombre"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-xs-3">Apellido</label>
            <div class="col-xs-9">
                <input class="form-control"
                        type="text"
                        placeholder="@datos.sApellido"
                        value="@datos.sApellido" />
            </div>
        </div>
    }
</div>